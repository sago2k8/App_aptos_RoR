		<td><%= a.people.count %></td>
		<td> <%= link_to raw("<i class='material-icons'>mode_edit</i>"), edit_tower_apartament_path(@tower,a) %> </td>
		<td><%= link_to raw("<i class='material-icons '>delete</i> " ), tower_apartament_path(@tower,a), method: :delete, data: {confirm: "Estas
