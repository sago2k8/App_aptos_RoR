<h1 class="center"> <%= @tower.nombre.upcase %></h1>
<h3 class= "center">  <b> Portero: </b><%= @tower.portero.capitalize %></h3>
 <%= link_to raw("<i class='material-icons'>add</i>"), new_tower_apartament_path(@tower), :class => "btn-floating btn-light waves-effect waves-light blue"  %>  

<table>
	
	<thead>
	<th>Apartamento </th>
